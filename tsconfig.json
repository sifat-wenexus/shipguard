{
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "db.mjs"],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext.asynciterable"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node16",
    "module": "node16",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "#prisma-client": ["./prisma/client"]
    },
    "types": ["@shopify/app-bridge-types"],
    "noEmit": true
  }
}
